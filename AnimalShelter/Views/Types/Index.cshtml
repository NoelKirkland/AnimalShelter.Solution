@using AnimalShelter.Models;
@using Type = AnimalShelter.Models.Type;
@model List<AnimalShelter.Models.Type>;


<h1>Animal Types</h1>
<hr/>

@if (@Model.Count == 0)
{
  <h3>No aminal types have been added yet</h3>
}

@foreach (Type type in Model)
{
  <li>@Html.ActionLink($"{type.Name}", "Details", new { id = type.TypeId })</li>
}

<p>@Html.ActionLink("Add new animal type", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>